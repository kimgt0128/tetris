<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<StackPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tetris.ui.controllers.MainMenuController">
   <children>
      <ImageView fx:id="backgroundImage" pickOnBounds="true" preserveRatio="false">
         <image>
            <Image url="@/assets/img/Tetris_Background.png" />
         </image>
      </ImageView>
      <VBox alignment="BOTTOM_CENTER" spacing="30.0">
         <children>
            <Button fx:id="normalModeButton" mnemonicParsing="false" onAction="#onStartNormalMode" prefWidth="200.0" text="일반 모드" style="-fx-background-color: #3498db; -fx-text-fill: white;">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button fx:id="itemModeButton" mnemonicParsing="false" onAction="#onStartItemMode" prefWidth="200.0" text="아이템 모드" style="-fx-background-color: #e74c3c; -fx-text-fill: white;">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button fx:id="scoreBoardButton" mnemonicParsing="false" onAction="#onScoreBoard" prefWidth="200.0" text="스코어보드">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button fx:id="settingsButton" mnemonicParsing="false" onAction="#onSettings" prefWidth="200.0" text="설정">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button fx:id="exitButton" mnemonicParsing="false" onAction="#onExit" prefWidth="200.0" text="종료">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
         </padding>
      </VBox>
   </children>
</StackPane>