<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tetris.ui.controllers.GameOverController" style="-fx-background-color: #000000;">
   <children>
      <Label text="게임 종료" style="-fx-font-size: 48px; -fx-text-fill: #e74c3c; -fx-font-weight: bold;"/>
      <Label fx:id="finalScoreLabel" text="Final Score: 0" style="-fx-font-size: 28px;">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Label>
      
      <!-- 현재 모드/난이도의 스코어보드 표시 -->
      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <Label fx:id="scoreboardTitleLabel" text="현재 스코어보드" style="-fx-font-size: 18px; -fx-text-fill: #3498db; -fx-font-weight: bold;"/>
            <ListView fx:id="scoreListView" prefHeight="250.0" prefWidth="500.0" style="-fx-background-color: #34495e; -fx-border-color: #3498db; -fx-border-width: 2px;">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </ListView>
         </children>
      </VBox>
      
      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <Label text="플레이어 이름을 입력하세요:" style="-fx-font-size: 20px;"/>
            <TextField fx:id="playerNameField" prefWidth="300.0" promptText="이름 입력" />
         </children>
      </VBox>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Button fx:id="saveScoreButton" mnemonicParsing="false" onAction="#onSaveScore" text="점수 저장" />
            <Button fx:id="backToMenuButton" mnemonicParsing="false" onAction="#onBackToMenu" text="시작 메뉴" />
            <Button fx:id="exitButton" mnemonicParsing="false" onAction="#onExitGame" text="프로그램 종료" />
         </children>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="30.0" left="50.0" right="50.0" top="30.0" />
   </padding>
</VBox>