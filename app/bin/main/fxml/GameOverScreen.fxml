<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="30.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tetris.ui.controllers.GameOverController" style="-fx-background-color: #000000;">
   <children>
      <Label text="게임 종료" style="-fx-font-size: 48px; -fx-text-fill: #e74c3c; -fx-font-weight: bold;"/>
      <Label fx:id="finalScoreLabel" text="Final Score: 0" style="-fx-font-size: 28px;">
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </Label>
      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <Label text="플레이어 이름을 입력하세요:" style="-fx-font-size: 20px;"/>
            <TextField fx:id="playerNameField" prefWidth="300.0" promptText="이름 입력" />
         </children>
      </VBox>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onSaveScore" text="점수 저장" />
            <Button mnemonicParsing="false" onAction="#onPlayAgain" text="다시 플레이" />
            <Button mnemonicParsing="false" onAction="#onBackToMenu" text="메인 메뉴" />
         </children>
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
   </padding>
</VBox>