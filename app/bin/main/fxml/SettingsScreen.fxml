<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tetris.ui.controllers.SettingsController" style="-fx-background-color: #000000;">
   <children>
      <VBox spacing="20.0" prefWidth="500.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <children>
                  <Label prefWidth="120.0" text="난이도:" />
                  <ComboBox fx:id="difficultyComboBox" prefWidth="250.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <children>
                  <Label prefWidth="120.0" text="화면 모드:" />
                  <ComboBox fx:id="screenSizeComboBox" prefWidth="250.0" />
               </children>
            </HBox>
            
            <!-- 키 설정 섹션 -->
            <Label text="키 설정" styleClass="section-label">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            
            <HBox alignment="CENTER_LEFT" spacing="15.0">
               <children>
                  <Label prefWidth="120.0" text="왼쪽 이동:" />
                  <TextField fx:id="keyLeftField" prefWidth="60.0" promptText="키 입력" />
                  
                  <Label prefWidth="120.0" text="오른쪽 이동:" />
                  <TextField fx:id="keyRightField" prefWidth="60.0" promptText="키 입력" />
               </children>
            </HBox>
            
            <HBox alignment="CENTER_LEFT" spacing="15.0">
               <children>
                  <Label prefWidth="120.0" text="아래 이동:" />
                  <TextField fx:id="keyDownField" prefWidth="60.0" promptText="키 입력" />
                  
                  <Label prefWidth="120.0" text="회전:" />
                  <TextField fx:id="keyRotateField" prefWidth="60.0" promptText="키 입력" />
               </children>
            </HBox>
            
            <HBox alignment="CENTER_LEFT" spacing="15.0">
               <children>
                  <Label prefWidth="120.0" text="하드 드롭:" />
                  <TextField fx:id="keyHardDropField" prefWidth="120.0" promptText="키 입력" />
               </children>
            </HBox>
            
            <VBox spacing="12.0">
               <children>
                  <CheckBox fx:id="accessibilityModeCheckBox" text="접근성 모드 (블록 모양으로 구분)" />
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </VBox>
         </children>
      </VBox>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onSaveSettings" text="저장" />
            <Button mnemonicParsing="false" onAction="#onResetSettings" text="설정 초기화" />
            <Button mnemonicParsing="false" onAction="#onClearScoreboard" text="스코어보드 초기화" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
            <Button mnemonicParsing="false" onAction="#onBackToMenu" text="돌아가기" />
         </children>
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
   </padding>
</VBox>